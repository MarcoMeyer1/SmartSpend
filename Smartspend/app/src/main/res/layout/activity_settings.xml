<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b1b1b"
    android:padding="16dp">

    <!-- Main Content Container -->
    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Settings title -->
        <TextView
            android:id="@+id/settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Settings"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_horizontal" />

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:layout_marginTop="16dp" />

        <!-- General Section -->
        <TextView
            android:id="@+id/section_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="General"
            android:textColor="#808080"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:paddingLeft="16dp">

            <CheckBox
                android:id="@+id/checkbox_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:text="Allow Notifications"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginBottom="12dp" />

            <CheckBox
                android:id="@+id/checkbox_biometric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:text="Enable SSO"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/label_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Language"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginRight="16dp" />

                <Spinner
                    android:id="@+id/spinner_language"
                    android:layout_width="119dp"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:backgroundTint="#70FFB5"
                    android:entries="@array/language_array"
                    android:popupBackground="@color/black"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#333333" />

        <!-- Account Section -->
        <TextView
            android:id="@+id/section_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Account"
            android:textColor="#808080"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="View Profile"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#333333"
            android:layout_marginTop="16dp" />

        <!-- Sign Out Button -->
        <Button
            android:id="@+id/btn_sign_out"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48dp"
            android:backgroundTint="#31453a"
            android:text="Sign Out"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:gravity="center"
            app:cornerRadius="24dp"
            app:strokeColor="#70FFB5"
            app:strokeWidth="1dp" />

    </LinearLayout>

    <!-- Navbar at the bottom -->
    <include
        android:id="@+id/bottom_nav"
        layout="@layout/activity_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="0dp" /> <!-- Ensure it touches the bottom -->

</androidx.constraintlayout.widget.ConstraintLayout>