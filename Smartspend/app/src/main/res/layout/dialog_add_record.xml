<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/popup_border"
    android:gravity="center">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_record_label"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/button_income"
        android:layout_width="305dp"
        android:layout_height="78dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#DE31453A"
        android:padding="12dp"
        android:text="@string/income_label"
        android:textColor="#6FFDB4"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:strokeColor="#6FFDB4"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/button_expense"
        android:layout_width="304dp"
        android:layout_height="78dp"
        android:backgroundTint="#DE31453A"
        android:padding="12dp"
        android:text="@string/expenses_label"
        android:textColor="#FD6A6A"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:strokeColor="#FD6A6A"
        app:strokeWidth="3dp" />

</LinearLayout>
